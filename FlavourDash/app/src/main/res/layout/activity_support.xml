<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportActivity">
    <!-- support_page.xml -->

    <!-- support_page.xml -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282836">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            app:srcCompat="@drawable/arrow" />

        <!-- Support page header -->
        <TextView
            android:id="@+id/support_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backBtn"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:text="Support"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Support FAQs section -->
        <TextView
            android:id="@+id/faq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/support_header"
            android:background="@color/white"
            android:padding="16dp"
            android:text="Frequently Asked Questions"
            android:backgroundTint="#353544"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <!-- Support FAQs section -->
        <TextView
            android:id="@+id/faq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/support_header"
            android:background="@color/white"
            android:padding="16dp"
            android:text="Frequently Asked Questions"
            android:backgroundTint="#353544"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/faq_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/faq_title"
            android:orientation="vertical"
            android:background="#282836"
            android:padding="16dp">

            <!-- FAQ item 1 -->
            <TextView
                android:id="@+id/faq_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="How can I place an order?"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- FAQ item 2 -->
            <TextView
                android:id="@+id/faq_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="How can I track my order?"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- FAQ item 3 -->
            <TextView
                android:id="@+id/faq_item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="What payment methods are supported?"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- FAQ item 4 -->
            <TextView
                android:id="@+id/faq_item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="How can I provide feedback?"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Support contact section -->
        <TextView
            android:id="@+id/contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/faq_container"
            android:background="@color/white"
            android:padding="16dp"
            android:text="Contact Us"
            android:backgroundTint="#353544"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/contact_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_title"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact item 1 -->
            <TextView
                android:id="@+id/contact_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Email: support@flavourdash.com"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Contact item 2 -->
            <TextView
                android:id="@+id/contact_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Phone:  +91 7019700244\n\t\t\t\t\t\t\t\t   +91 9833914377"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>